<div class="navbar px-4 d-flex justify-content-between" style="height: 60px; background-color: #FE8180;">
  <%= link_to image_tag('back-arrow.png', height: '22', width: '20'),  event_path(@event) %>
  <h4 class="mb-0" style="font-family: Noto Sans; font-weight: bold; color: #472B62">Edit Event Details</h4>
  <div style="width: 22px"></div>
</div>

<div class="event-form">
  <%= simple_form_for @event do |f| %>

  <%= f.input :title %>
  <hr style="border-width: 4px;" class="m-0">
  <%= f.input :location %>
  <hr style="border-width: 4px;" class="m-0">
  <%= f.input :start_time, as: 'string', input_html: {class: 'picker'} %>
  <hr style="border-width: 4px;" class="m-0">
  <%= f.input :end_time, as: 'string', input_html: {class: 'picker'} %>
  <hr style="border-width: 4px;" class="m-0">
  <%= f.input :description %>
  <hr style="border-width: 4px;" class="m-0">
</div>

<div class="bottom-btn">
  <%= f.button :submit, "Save", class: "submit-btn" %>
</div>
<% end %>
