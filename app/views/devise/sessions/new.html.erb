<div class="container mt-5">

<div class="text-center">
  <a href="<%= root_path %>" class="links" style="font-size: 4rem; color: #472B62; font-weight: bold;">jessi</a>
</div>
<div class="d-flex w-50 mt-4 mb-5 justify-content-center" style="margin: 0 auto;">
  <h5 class="pr-1 pb-2" style="color: #472B62; border-bottom: 1px solid grey;">login</h5>
  <h5 class="pl-1" style="color: #472B62; text-decoration: none;"><%= link_to "signup", new_registration_path(resource_name), class: 'links' %></h5>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'login-form-field' } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: 'login-form-field' } %>
  </div>

</div>
  <div class="bottom-btn">
    <%= f.button :submit, "Log in", class: "submit-btn" %>
  </div>
<% end %>

