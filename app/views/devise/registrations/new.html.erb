<div class="container mt-5">

<div class="text-center">
  <%= link_to image_tag('jessi-logo-navbar.png', height: '53', width: '140'),  root_path %>
</div>
<div class="d-flex w-50 mt-4 justify-content-center" style="margin: 0 auto;">
  <h5 class="pr-1 pb-2" style="color: #472B62; text-decoration: none;"><%= link_to "login", new_user_session_path, class: 'links' %></h5>
  <h5 class="pl-1" style="color: #472B62; border-bottom: 1px solid grey;">signup</h5>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, input_html: { class: 'login-form-field' } %>
    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email", class: 'login-form-field' }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: 'login-form-field' } %>
  </div>

  </div>
    <div class="bottom-btn">
      <%= f.button :submit, "Sign up", class: "submit-btn" %>
    </div>
  <% end %>
