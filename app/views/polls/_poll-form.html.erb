<%= simple_form_for [@event, @poll] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :question %>
    <hr style="border-width: 6px; background-color: #FE8180;" class="m-0">
    <div id="choices">
      <div class="form-group">
        <label for="1">Option 1</label>
        <input name="choices[]" type="text" id="1" class="form-control" />
      </div>

      <hr style="border-width: 4px;" class="m-0">

      <div class="form-group">
        <label for="2">Option 2</label>
        <input name="choices[]" type="text" id="2" class="form-control" />
      </div>
      <hr style="border-width: 4px;" class="m-0">
    </div>

    <button type="button" class="btn btn-white add-choice-btn form-group d-flex justify-content-center align-items-center" style="height: 102px; width: 100%;">
      <%= image_tag('plus.png', height: '22', width: '22') %>
    </button>
    <hr style="border-width: 4px;" class="m-0">

  </div>

  <!-- makes sure the last card isn't covered by the bottom btn -->
  <div style="height: 115px;"></div>

  <div class="form-actions bottom-btn">
    <%= f.button :submit, class: "submit-btn" %>
  </div>
<% end %>
