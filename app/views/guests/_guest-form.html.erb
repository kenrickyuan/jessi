<%= simple_form_for [@event, @guest] do |f| %>
  <div class="form-inputs">
    <div id="guests">
      <div class="form-group">
        <label for="1">Guest</label>
        <input name="guests[]" type="text" id="1" class="form-control" autocomplete="off" />
      </div>

      <hr style="border-width: 4px;" class="m-0">
    </div>

    <button type="button" class="btn btn-white add-guest-btn form-group d-flex justify-content-center align-items-center" style="height: 102px; width: 100%;">
      <%= image_tag('plus.png', height: '22', width: '22') %>
    </button>
    <hr style="border-width: 4px;" class="m-0">

  </div>

  <!-- makes sure the last card isn't covered by the bottom btn -->
  <div style="height: 115px;"></div>

  <div class="form-actions bottom-btn">
    <%= f.button :submit, "Add to guestlist", class: "submit-btn w-auto" %>
  </div>
<% end %>
