<div class="navbar px-4 d-flex justify-content-between sticky-top" style="height: 60px; background-color: #FE8180;">
  <%= link_to image_tag('back-arrow.png', height: '22', width: '20'), :back %>
  <h5 class="mb-0" style="font-weight: bold; color: #472B62">Paying back <%= @expense.guest.name.capitalize %></h5>
  <div style="width: 22px"></div>
</div>

<div class="d-flex align-items-center" style="height: calc(100vh - 120px);">
  <div class="card mx-4 p-0 w-100">
    <%= simple_form_for [@event, @expense, @transaction] do |f| %>
    <%= f.association :payer, collection: @guests, label: "Who?" %>
    <h5 class="mx-3 text-center" style="color: #472B62; font-weight: bold;">paid</h5>
    <%= f.input :amount, input_html: { value: "" }, label: "How much?" %>
    <h5 class="mx-3 mb-4 text-center" style="color: #472B62; font-weight: bold;">to <%= @expense.guest.name %></h5>
  </div>
</div>

<!-- makes sure the last card isn't covered by the bottom btn -->
<div style="height: 115px;"></div>

<div class="bottom-btn">
  <%= f.submit "Settle up", class: "submit-btn-expenses" %>
</div>
<% end %>
