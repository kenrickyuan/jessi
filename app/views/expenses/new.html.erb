<div class="navbar px-4 d-flex justify-content-between" style="height: 60px; background-color: #FE8180;">
  <%= link_to image_tag('back-arrow.png', height: '22', width: '20'), event_expenses_path(@event) %>
  <h5 class="mb-0" style="font-family: Noto Sans; font-weight: bold; color: #472B62">Create an expense</h5>
  <div style="width: 22px"></div>
</div>

<div>
  <%= simple_form_for [@event, @expense] do |f| %>
    <%= f.association :guest, collection: @event.guests, label: "Who?" %>
    <h5 class="mx-3 text-center" style="color: #472B62; font-weight: bold;">paid</h5>
    <%= f.input :amount, input_html: { value: "" }, label: "How much?" %>
    <h5 class="mx-3 text-center" style="color: #472B62; font-weight: bold;">for</h5>
    <%= f.input :description, label: "What?" %>
    <div class="bottom-btn">
      <%= f.submit "Add expense", class: "submit-btn-expenses" %>
    </div>
  <% end %>
</div>
