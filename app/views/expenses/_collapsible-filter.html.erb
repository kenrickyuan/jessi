<div class="d-flex justify-content-between">
  <button class="purple-btn d-flex justify-content-around px-3" style="width: 100px;" type="button" data-toggle="collapse" data-target="#collapseExpenseForm" aria-expanded="false" aria-controls="collapseExpenseForm">
    <%= image_tag('search.png', height: '20', width: '20') %>
    <h6 class="m-0">Find</h6>
  </button>
  <%= link_to "Reset", event_expenses_path(@event), class: "purple-btn w-25" %>
</div>



<div class="collapse mt-4 card" id="collapseExpenseForm">
  <!-- Form to filter the expenses by description and/or guest -->
  <h5 class="p-0 mb-2" style="color: #472B62;">Filter by:</h5>
  <%= simple_form_for :search, url: event_expenses_path, method: "GET" do |f| %>
  <%= f.input :description, collection: @event.expenses, label_method: :description, value_method: :description %>
  <h5 class="text-center p-0 mt-2 mb-0" style="color: #472B62;">or</h5>
  <%= f.input :guest, collection: @event.guests %>
  <input type="submit" class="purple-btn mt-4" style="width: 100%;" name="commit" value="Filter expenses" data-disable-with="Filter expenses" data-toggle="collapse" href="#collapseExpenseForm" role="button" aria-expanded="false" aria-controls="collapseExpenseForm">
  <% end %>
</div>
