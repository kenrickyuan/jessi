<div class="sticky-top" style="background-color: #FE8180;">
  <%= render partial: "shared/navbar-main" %>
  <div class="navbar-bottom mx-4 rounded-pill d-flex justify-content-evenly align-items-center" style="background-color: white; height: 42px;">
    <a href="<%= event_path(@event) %>" class="overview-tab d-flex justify-content-center align-items-center text-decoration-none" style="width: 33.3%; height: 100%;">
      <h6 class="mb-0" style="color: #472B62; font-family: Noto Sans;">Overview</h6>
    </a>
    <a href="<%= event_polls_path(@event) %>" class="polls-tab d-flex justify-content-center align-items-center text-decoration-none" style="width: 33.3%; height: 100%; padding: 4px 4px;">
      <div class="rounded-pill d-flex justify-content-center align-items-center" style="width: 100%; height: 100%; background-color: #472B62">
        <h6 class="mb-0" style="color: white; font-family: Noto Sans;">Polls</h6>
      </div>
    </a>
    <a href="<%= event_expenses_path(@event) %>" class="expenses-tab d-flex justify-content-center align-items-center text-decoration-none" style="width: 33.3%; height: 100%;">
      <h6 class="mb-0" style="color: #472B62; font-family: Noto Sans;">Expenses</h6>
    </a>
  </div>
  <div class="text-center mt-3 p-2" style="background-color: #FAFAFA; box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.1);">
    <h5 style="font-weight: bold; font-family: Noto Sans; color: #472B62;"><%= @event.title %></h5>
    <p class="mb-0" style="color: #646464; "><%= @polls.count %> polls</p>
  </div>
</div>
