<div id="mySidebar" class="sidebar">
    <h2>Your Events</h2>
    <% if !(@current.empty?) %>
    <h3 class ="header-sidebar">Today</h3>
    <% @current.each do |current_event| %>
    <div class="event"><h2><%= link_to current_event.title, event_path(current_event) %></h2>
      <% end %>
    </div>
    <% end %>
    <% if !(@pending.empty?) %>
    <h3 class ="header-sidebar">Upcomming</h3>
    <div class="event">
      <% @pending.each do |pending_event| %>
      <h2><%= link_to pending_event.title, event_path(pending_event) %></h2>
      <% end %>
    </div>
    <% end %>
    <% if !(@past.empty?) %>
    <h3 class ="header-sidebar">Past</h3>
    <div class="event">
      <% @past.each do |past_event| %>
      <h2><%= link_to past_event.title, event_path(past_event) %></h2>
      <% end %>
    </div>
    <% end %>
  </div>
